@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Contoso University</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Welcome to Contoso University</h2>
        <p>
            Contoso University is a totally real university! This webiste is for Contoso University administrators to manage students, instructors, and related data.
        </p>
    </div>
    <div class="col-md-4">
        <h2>Create a New Student</h2>
        <p>Here is a quick link to the new student creation form.</p>
        <p><a class="btn btn-default" asp-controller="Students" asp-action="Create">New Student &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Create a New Instructor</h2>
        <p>Here is a quick link to the new instructor creation form.</p>
        <p><a class="btn btn-default" asp-controller="Instructors" asp-action="Create">New Instructor &raquo;</a></p>
    </div>
</div>